<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Haskell" version="0.1.0" kateversion="2.3" section="Sources"
	  extensions="*.hs" mimetype="text/x-haskell"
	  author="Ian Sturdy (sturdyi12@mail.wlu.edu)"
	  license="Public Domain" indenter="haskell">
  <highlighting>
  <list name="reserved">
    <item> as        </item>
    <item> case      </item>
    <item> class     </item>
    <item> data      </item>
    <item> deriving  </item>
    <item> do        </item>
    <item> else      </item>
    <item> hiding    </item>
    <item> if        </item>
    <item> import    </item>
    <item> in        </item>
    <item> infixl    </item>
    <item> infixr    </item>
    <item> instance  </item>
    <item> let       </item>
    <item> module    </item>
    <item> newtype   </item>
    <item> of        </item>
    <item> primitive </item>
    <item> qualified </item>
    <item> then      </item>
    <item> type      </item>
    <item> where     </item>
  </list>
  <contexts>
    <context attribute="Nrm" lineEndContext="#stay" name="top">
      <keyword      attribute="Kwd" context="#stay" String="reserved"        /> 
      <RegExpr      attribute="Def" context="main"
         String="([a-zA-Z][a-zA-Z0-9_']*)"                                   />
      <RegExpr      attribute="Nrm" context="main"  String="\s"              />
      <RegExpr      attribute="Prg" context="#stay" String="\{-#.*#-\}"      />
      <RegExpr      attribute="Cmt" context="cmt"
         String="--[^\-!#\$%&amp;\*\+/&lt;=&gt;\?&#92;@\^\|~\.:].*$"        />
      <RegExpr      attribute="Cmt" context="ncmt"  String="\{-[^#]?"        />
    </context>
    <context attribute="Nrm" lineEndContext="top"   name="main">
      <RegExpr      attribute="Prg" context="#stay" String="\{-#.*#-\}"      />
      <RegExpr      attribute="Cmt" context="cmt"   String="\{-[^#]?"        />
      <RegExpr      attribute="Cmt" context="ncmt"  
         String="--[^\-!#\$%&amp;\*\+/&lt;=&gt;\?&#92;@\^\|~\.:].*$"        />
      <keyword      attribute="Kwd" context="#stay" String="keywords"        />
      <RegExpr      attribute="Op"  context="#stay"
         String="[\-!#\$%&amp;\*\+/&lt;=&gt;\?&#92;@\^\|~\.:]+"             />
      <AnyChar      attribute="Op"  context="#stay" String="∷⇒→←∀∃"        />
      <RegExpr      attribute="Flt" context="#stay" String="\d+\.\d+"        />
      <Int          attribute="Dec" context="#stay"                          />
      <RegExpr      attribute="Typ" context="#stay" 
         String="([A-Z][a-zA-Z0-9_']*\.)*[A-Z][a-zA-Z0-9_']*"                />
      <DetectChar   attribute="Chr" context="chr"   char="'"                 />
      <DetectChar   attribute="Str" context="str"   char="&quot;"            />
      <DetectChar   attribute="Inf" context="inf"   char="`"                 />
      <Detect2Chars attribute="En"  context="#stay" char ="." char1="."      />
      <AnyChar      attribute="En"  context="#stay" String="‥"               />
    </context>
    <context attribute="Cmt" lineEndContext="top"   name="cmt" />
    <context attribute="Cmt" lineEndContext="#stay" name="ncmt">
      <Detect2Chars attribute="Cmt" context="#pop"  char="-" char1="}"       />
    </context>
    <context attribute="Chr" lineEndContext="#pop" name="chr">
      <RegExpr      attribute="Chr" context="#stay" String="\\."             />
      <DetectChar   attribute="Chr" context="#pop"  char="'"                 />
    </context>
    <context attribute="Str" lineEndContext="#stay" name="string">
      <RegExpr      attribute="Str" context="#stay" String="\\."             />
      <DetectChar   attribute="Str" context="#pop"  char="&quot;"            />
    </context>
    <context attribute="Inf" lineEndContext="#stay" name="infix">
      <DetectChar   attribute="Inf" context="#pop" char="`"                  />
    </context>
  </contexts>
  <itemDatas>
    <itemData name="Nrm" defStyleNum="dsNormal"   spellChecking="false" />
    <itemData name="Cmt" defStyleNum="dsComment"                        />
    <itemData name="Prg" defStyleNum="dsComment"  spellChecking="false" />
    <itemData name="Kwd" defStyleNum="dsKeyword"  spellChecking="false" />
    <itemData name="Op"  defStyleNum="dsFunction" spellChecking="false" />
    <itemData name="Typ" defStyleNum="dsDataType" spellChecking="false" />
    <itemData name="Dec" defStyleNum="dsDecVal"   spellChecking="false" />
    <itemData name="Flt" defStyleNum="dsFloat"    spellChecking="false" />
    <itemData name="Chr" defStyleNum="dsChar"     spellChecking="false" />
    <itemData name="Str" defStyleNum="dsString"                         />
    <itemData name="Inf" defStyleNum="dsOthers"   spellChecking="false" />
    <itemData name="En"  defStyleNum="dsOthers"   spellChecking="false" />
  </itemDatas>
  </highlighting>
  <general>
    <folding indentationsensitive="1"/>
    <comments>
      <comment name="singleLine" start="--" />
      <comment name="multiLine" start="{-" end="-}" />
    </comments>
    <keywords casesensitive="1" />
</general>
</language>
